# 문제1

def is_odd(number):
    if number % 2 == 1 :
        return True
    else:
        return False
    
# 문제 2

def avg_numbers(*args):
    result = 0
    for i in args:
        result += i
    return result / len(args)

print(avg_numbers(1,2))
print(avg_numbers(1,2,3,4,5))

# 문제 3

input1 = input('첫 번째 숫자를 입력하세요: ')
input2 = input('두 번재 숫자를 입력하세요: ')

num1 = int(input1)
num2 = int(input2)

total = num1 + num2

print(f'두 수의 합은 {total}입니다.')


