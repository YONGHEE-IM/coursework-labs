def show_price():
    print('커트 가격은 1000원입니다.')

customer1 = '나장발'
print(f'{customer1} 고객님')
show_price()

customer2 = '나수염'
print(f'{customer2} 고객님')
show_price()

def show_price(customer): # 함수 정의
    print(f'사랑하는 {customer} 고객님')
    print('감성 커트 가격은 15000 원입니다')

customer1 = '나장발'
show_price(customer1) # 함수 호출

customer2 = '나수염'
show_price(customer2) # 함수 호출

def get_price():
    return 15000

price = get_price()
print(price)

def get_price(is_vip):
    if is_vip == True:
        return 10000
    else:
        return 15000
    
price = get_price(False)
print(price)

def order(shot=2, size='Regular', takeout=True): 
    print(f'아메리카노 {size} 사이즈 {shot}샷')
    if takeout:
        print('포장 주문이 완료되었습니다')
    else:
        print('주문이 완료 되었습니다')

# print(order())
# print(order(2, takeout=True))
# print(order(size='Regular'))
print(order('Regular', takeout=True))

def my_function(a, *b):
    print(a)
    print(*b)

my_function(1, 2, 3, 4, 5, 6)

def secret():
    message = '이건 나만의 비밀'
    print(message)
    message = '함수 내에서는 수정 가능'
    print(message)


print(secret())

def please():
    message = '이건 가능?'
    print(message)

message = '나는 전역 변수'
print(message)

def no_secret():
    global message
    message = '이러면 지역 변수'
    print(message)

no_secret()
print(message)

x = 3
def add():
    x = 6
    x += 3
    print(x)
add()   # 지역 변수
print(x) # 글로벌 변수

